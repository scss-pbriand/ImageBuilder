@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="btn btn-link nav-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
